NODE_ENV=development
PORT=5000

# Database
DATABASE_URL=postgresql://sukusuku_user:password@localhost:5432/sukusuku_db
DATABASE_SSL=false

# Session & JWT
SESSION_SECRET=replace-with-strong-secret
JWT_SECRET=replace-with-strong-secret

# OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# External APIs (Server-side)
PENORA_API_KEY=your-penora-api-key
PENORA_BASE_URL=https://penora.sukusuku.ai
IMAGEGENE_BASE_URL=https://imagegene.sukusuku.ai

# External APIs (Client-side - must start with VITE_)
VITE_PENORA_APP_URL=https://penora.sukusuku.ai
VITE_IMAGEGENE_BASE_URL=https://imagegene.sukusuku.ai

# Email
GMAIL_USERNAME=your-gmail-username
GMAIL_APP_PASSWORD=your-gmail-app-password
# or use MailerSend
MAILERSEND_API_TOKEN=your-mailersend-api-token

# Optional Replit auth
REPLIT_DOMAINS=
REPL_ID=
ISSUER_URL=https://replit.com/oidc

